#Primeira Questão
numeros_pares = []
numeros_impares = []
print("Digite [0] para sair.")
while True:
    numero = int(input("Digite um número: "))
    if numero == 0:
        break
    if numero % 2 == 0:
        numeros_pares.append(numero)
    else:
        numeros_impares.append(numero)
media_pares = sum(numeros_pares)/len(numeros_pares) if numeros_pares else 0
media_impares = sum(numeros_impares)/len(numeros_impares) if numeros_impares else 0
print("♀♂ Média dos números pares:", media_pares)
print("Média dos números ímpares:", media_impares)

#Segunda Questão
alturas = []
ct_homens = 0
ct_mulheres = 0
print("Digite [0] para sair.")
while True:
    altura = float(input("Digite a altura: "))
    if altura == 0:
        break
    genero = input("Digite [m] para masculino ou [f] para feminino: ")
    alturas.append(altura)
    if genero == 'm':
        ct_homens += 1
    elif genero == 'f':
        ct_mulheres += 1
maior_altura = max(alturas)
menor_altura = min(alturas)
print("\nMaior altura do grupo:", maior_altura)
print("Menor altura do grupo:", menor_altura)
print("Quantidade de homens:", ct_homens)
print("Quantidade de mulheres:", ct_mulheres)
